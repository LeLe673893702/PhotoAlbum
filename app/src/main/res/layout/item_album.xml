<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
    android:background="@drawable/item_selector">

    <ImageView
        android:id="@+id/iv_album_list"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@color/black"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:text="所有照片信息 15张"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:layout_toRightOf="@+id/iv_album_list"
        android:id="@+id/tv_album_content"
        android:textColor="@color/gray_80"/>

    <ImageView
        android:layout_width="@dimen/album_list_size"
        android:layout_height="@dimen/album_list_size"
        android:layout_alignParentRight="true"
        android:src="@drawable/image_album_item_arrow"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>

</RelativeLayout>
